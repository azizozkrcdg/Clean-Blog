<%- include("./partials/_header.ejs") %>
  <!-- Navigation -->
  <%- include("./partials/_navigation.ejs") %>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Edit Post</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
          
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input type="text" class="form-control" name="title" value="<%= post.title %>" id="title" required data-validation-required-message="Please enter post name.">
            </div>
          
            <div class="form-group floating-label-form-group controls">
              <label>Post Detail</label>
              <textarea rows="5" name="post_text" class="form-control" id="post_text" required data-validation-required-message="Please enter a message.">
                <%= post.post_text %>
              </textarea>  
            </div>
          
            <div class="form-group floating-label-form-group controls">
              <label>Creator</label>
              <input type="text" class="form-control" name="creator" value="<%= post.creator %>" id="creator" required data-validation-required-message="Please enter your name.">
            </div>
          
          <br>

          <div class="form-group" id="success">
          <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <hr>

  <!-- Footer -->
  <%- include("./partials/_footer.ejs") %>